script/source = "extends Upgradeable
class_name Firecamp

var has_respawn := false
var has_storage := false
var storage_capacity := 0

func _unlock_functionality():
	match current_tier:
		1:  # Tier 1: Camp de base
			has_respawn = true
			print(\"Firecamp upgraded! Respawn point unlocked\")
		2:  # Tier 2: Camp avancÃ©
			has_storage = true
			storage_capacity = 100
			print(\"Firecamp upgraded! Storage unlocked (capacity: 100)\")
		3:  # Tier 3: Forteresse
			storage_capacity = 500
			print(\"Firecamp upgraded! Storage expanded (capacity: 500)\")

func can_respawn() -> bool:
	return has_respawn

func get_storage_capacity() -> int:
	return storage_capacity
"

